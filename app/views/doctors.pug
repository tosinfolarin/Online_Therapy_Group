doctype html
html
    head
        title Therapist Information
        style
            include ./assets/css/doctor.css
            
            
    body
        table
            caption HEY, THIS IS MY DETAILS. LET ME KNOW IF YOU NEED ANYTHING.
            tr
                th Therapist Name
            each row in results
                tr
                    td= row.TherapistName
                    td
                        a(href='/doctordetails/' + row.Therapist_Reg_No) #{row.TherapistName} - Click for Details
        br
        
        form.form-container(action="/submit" method="post")
            div BOOK YOUR SESSION WITH ME
            .form-group
                label(for="firstName") First Name:
                input(type="text", id="firstName", name="firstName", required)
            .form-group
                label(for="lastName") Last Name:
                input(type="text", id="lastName", name="lastName", required)
            .form-group
                label(for="age") Age:
                input(type="number", id="age", name="age", min="0", required)
            .form-group
                label(for="email") Email:
                input(type="email", id="email", name="email", required)
            .form-group
                label(for="phoneNumber") Phone Number:
                input(type="tel", id="phoneNumber", name="phoneNumber", pattern="[0-9]{10}", required)
            .form-group
                label(for="purpose") Purpose of Session:
                input(type="text", id="purpose", name="purpose", required)
            .form-group
                label(for="preferredSessionType") Preferred Type of Session:
                select(id="preferredSessionType", name="preferredSessionType", required)
                    option(value="call") Call
                    option(value="chat") Chat
                    option(value="videoCall") Video Call
            .form-group
                label(for="preferredDateTime") Preferred Time and Date:
                input(type="datetime-local", id="preferredDateTime", name="preferredDateTime", required)
            .form-group
            button.btn-submit(type="submit") Submit
