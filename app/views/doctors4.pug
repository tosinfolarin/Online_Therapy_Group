doctype html
html
    head
        title Therapist Information
        style
            include ./assets/css/doctor.css
        style.
            table {
                width: 100%;
                border-collapse: collapse;
                font-family: Arial, sans-serif;
            }
            th, td {
                padding: 10px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }
            th {
                background-color: #4ba976;
            }
            tr:hover {
                background-color: #f5f5f5;
            }
            a {
                text-decoration: none;
                color: blue;
            }
            a:hover {
                text-decoration: underline;
            }
    body
        table(border="1px")
            tr
                th Therapist Name
            each row in results
                tr
                    td= row.TherapistName
                    td Please click on my name to see my full details ---
                        a(href='/phoebe/' + row.Therapist_Reg_No) #{row.TherapistName}
        form.form-container#session-form(action="/submit-session" method="post" onsubmit="return showPaymentForm(event)")
            .form-group
                label(for="firstName") First Name:
                input(type="text", id="firstName", name="firstName", required)
            .form-group
                label(for="lastName") Last Name:
                input(type="text", id="lastName", name="lastName", required)
            .form-group
                label(for="age") Age:
                input(type="number", id="age", name="age", min="0", required)
            .form-group
                label(for="email") Email:
                input(type="email", id="email", name="email", required)
            .form-group
                label(for="phoneNumber") Phone Number:
                input(type="tel", id="phoneNumber", name="phoneNumber", pattern="[0-9]{10}", required)
            .form-group
                label(for="purpose") Purpose of Session:
                input(type="text", id="purpose", name="purpose", required)
            .form-group
                label(for="preferredSessionType") Preferred Type of Session:
                select(id="preferredSessionType", name="preferredSessionType", required)
                    option(value="call") Call
                    option(value="chat") Chat
                    option(value="videoCall") Video Call
            .form-group
                label(for="preferredDateTime") Preferred Time and Date:
                input(type="datetime-local", id="preferredDateTime", name="preferredDateTime", required)
            .form-group
                button.btn-submit(type="submit") Continue to payment
 
   
        form#payment-form.form-container(style="display: none;")
            .form-group
                label(for="cardNumber") Card Number:
                input(type="text", id="cardNumber", name="cardNumber", required)
            .form-group
                label(for="expiryDate") Expiry Date:
                input(type="text", id="expiryDate", name="expiryDate", required)
            .form-group
                label(for="cvv") CVV:
                input(type="password", id="cvv", name="cvv", required)
            .form-group
                button.btn-submit(type="button" onclick="processPayment()") Pay
 
       
        div#payment-confirmation(style="display: none;")
            p.donepayment Payment Successful! We will get in touch with you shortly to confirm your session details.
 
    script.
        function showPaymentForm(event) {
            event.preventDefault(); // Prevent form submission
            document.getElementById("session-form").style.display = "none"; // Hide session form
            document.getElementById("payment-form").style.display = "block"; // Show payment form
        }
 
         function processPayment() {
      // Here you can add code to process the payment
      // For simplicity, we'll just display the payment confirmation message
            document.getElementById("payment-form").style.display = "none"; // Hide payment form
            document.getElementById("payment-confirmation").style.display = "block"; // Show payment confirmation message
        }
 
